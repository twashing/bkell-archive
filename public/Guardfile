
group 'include' do
  guard 'haml', :input => "haml" , :output => "include" do
    watch(%r{haml/(.+)\.html\.haml$})    
  end
end 

guard 'haml' do
 watch('landing.html.haml')
end

guard 'livereload' do
 watch(/^.+\.html$/)
 watch(%r{include/.+\.html})
 watch(%r{css/.+\.css})
 watch(%r{js/.+\.js})
end

